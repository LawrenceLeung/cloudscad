<% form_for @script do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "width:100%;height:150px" %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_area :code, :style => "width:100%;height:600px" %>
  </p>
  <p>
    <%= button_to_function "Save", "this.form.submit()" %>
    <%= link_to "Cancel", :back %>
  </p>
<% end %>

