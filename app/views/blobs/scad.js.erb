var stl_string = "<%= @stl_hash[:stl_data].gsub(/\n/, '\\n') %>";

<% if @stl_hash[:openscad_output].to_s == "" -%>
  $('#openscad_output').slideUp()
<% else -%>
  $('#openscad_output').slideUp().html("<%= @stl_hash[:openscad_output].gsub(/\n/, '\\n').gsub('"', '\"') %>").slideDown();
<% end -%>

thingiview.loadSTLString(stl_string);

$('#render_spinner').hide();