<table class="tree">
  <tr>
    <th>Name</th>
    <th>Updated</th>
    <th>Message</th>
  </tr>
  <% project.repo.tree(treeish, path).contents.each do |content| -%>
    <% commit = project.repo.log(treeish, File.join(path + [content.name]))[0] -%>
    <tr>
      <td>
        <%= repo_icon(content) %> <%= content.name %>
      </td>
      <td>
        <%= time_ago_in_words(commit.committed_date) %> ago
      </td>
      <td>
        <%= commit.message %> [<%= commit.committer %>]
      </td>
    </tr>
  <% end -%>
</table>