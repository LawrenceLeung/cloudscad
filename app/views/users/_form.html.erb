<%= form_for @user do |f| %>
  <%= render "shared/error_messages", :target => @user %>

  <div class="field">
    <%= f.label :username %><br />
    <% if @action == "new" -%>
      <%= f.text_field :username %>
    <% else -%>
      <%= @user.username %>
    <% end -%>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <% if @user.new_record? -%>
    <div class="field">
      <%= f.label :invitation_code %><br />
      <%= text_field_tag :invitation_code, params["invitation_code"] %>
    </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>